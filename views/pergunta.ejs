<%- include("partials/header.ejs"); %>
<body>
    <%- include("partials/navbar.ejs"); %>

    <div class="container">
          <hr>
          <h1><%= pergunta.titulo %></h1>
          <p><%= pergunta.descricao %></p>
          <hr>
          <h3>Responda as perguntas</h3>
          <form action="/responder" method="post">
            <div class="mb-3">
                <label for="">Resposta</label>
                <textarea class="form-control" name="corpo" cols="30" rows="10" placeholder="Digite uma resposta"></textarea>
            </div>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button class="btn btn-primary mt-3" type="submit">
                <i class="fa-solid fa-plus"></i> Responder
            </button>
          </form>
          <hr>
          <h3>Respostas</h3>
          <hr>
          <% respostas.forEach(resposta => { %>
            <div class="card mb-1">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
          <% }) %>  
    </div>
</body>
<%- include("partials/footer.ejs"); %>